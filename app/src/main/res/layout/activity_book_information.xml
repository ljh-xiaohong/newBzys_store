<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#ff9c00">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_alignParentTop="true"
        android:background="#ff9c00">
        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="back"
            android:layout_centerVertical="true"
            android:textSize="45px"
            android:textColor="@android:color/white"
            android:layout_marginLeft="30px"
            android:text="取消"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助与反馈"
            android:textColor="@android:color/white"
            android:textSize="51px"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="commit"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="45px"
            android:textColor="@color/commit_orange"
            android:layout_marginRight="30px"
            android:text="提交"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_form"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/layout_title_bar"
        android:orientation="vertical"
        android:background="#e1e1e1">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_edt"
            android:layout_width="match_parent"
            android:layout_height="330px"
            android:background="@drawable/book_information_bg">
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_marginRight="30px"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_counts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/edt_hint_orange"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/edt_hint_gray"
                    android:text="300"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <EditText
                android:id="@+id/edt_book_information"
                android:layout_width="match_parent"
                android:hint="请输入意见与建议。。。"
                android:background="@null"
                android:layout_above="@id/tv_counts"
                android:layout_marginTop="25px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginBottom="45px"
                android:textSize="36px"
                android:textColorHint="@color/edt_hint_gray"
                android:layout_height="wrap_content" />

        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_call"
            android:layout_width="match_parent"
            android:layout_marginTop="39px"
            android:layout_height="130px"
            android:background="@drawable/book_information_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/call_gray"
                android:layout_marginLeft="30px"
                android:text="热线电话：400-8891884"/>
            <ImageButton
                android:id="@+id/imgBtn_call"
                android:src="@mipmap/phone"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
