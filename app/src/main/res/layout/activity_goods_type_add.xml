<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"  
	android:clipToPadding="true"
	android:background="#ff9c00"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
		android:layout_height="180px"
        android:background="#ff9c00">
        <ImageButton
			android:layout_width="69px"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:onClick="back"
			android:paddingLeft="30px"
            android:src="@mipmap/btn_back"
            android:background="@null"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增商品大类"
            android:textColor="@android:color/white"
			android:textSize="51px"
            android:layout_centerInParent="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_form"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#f9f9f9">

		<com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_name"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="150px"
            android:layout_marginTop="80px"
			android:padding="30px"
            android:background="@drawable/line_bottom">
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="名称"
                android:textColor="#333333"
                android:textSize="45px"/>
            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/tv_phone"
                android:layout_toStartOf="@+id/btn_clear"
                android:background="@android:color/white"
                android:layout_marginStart="60px"
                android:layout_centerVertical="true"
                android:hint="必填/请输入商品大类名称"
                android:textColorHint="#999999"
                android:textSize="45px"/>
            <ImageButton
                android:id="@+id/btn_clear"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@mipmap/btn_clear"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:layout_centerVertical="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>

		<com.zhy.autolayout.AutoLinearLayout
	        android:id="@+id/layout_oper"
	        android:layout_width="fill_parent"
			android:layout_height="141px"
			android:layout_marginTop="108px"
	        android:orientation="vertical">
	        <Button 
	            android:id="@+id/btn_sure"
	            android:layout_width="fill_parent"
	            android:text="确认"
	            android:onClick="toLogin"
	            android:textColor="@android:color/white"
				android:layout_height="141px"
				android:layout_marginStart="40px"
				android:layout_marginEnd="40px"
	            android:background="@drawable/btn_normal"/> 
	    </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
