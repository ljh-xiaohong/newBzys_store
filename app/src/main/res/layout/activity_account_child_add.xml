<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
	android:clipToPadding="true"
	android:background="#ff9c00"
    android:orientation="vertical">

	<com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="#ff9c00">
        <ImageButton
            android:layout_width="69px"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingLeft="30px"
            android:src="@mipmap/btn_back"
            android:background="@null"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="子账号管理"
            android:textColor="@android:color/white"
            android:textSize="51px"
            android:layout_centerInParent="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>

	<com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_form"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f9f9f9"
        android:orientation="vertical">
        <com.zhy.autolayout.AutoRelativeLayout
			android:layout_marginTop="81px"
	        android:id="@+id/layout_phone"
	        android:layout_width="fill_parent"
	        android:layout_height="150px"
	        android:orientation="vertical"
	        android:gravity="center_vertical"
	        android:padding="30px"
	        android:background="@drawable/line_bottom">
	        <TextView
	            android:id="@+id/tv_phone"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:text="姓       名"
	            android:textColor="#333333"
	            android:textSize="45px"/>
	        <EditText
	            android:id="@+id/ed_name"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_toEndOf="@+id/tv_phone"
	            android:background="@android:color/white"
	            android:layout_marginStart="60px"
	            android:layout_centerVertical="true"
	            android:hint="请输入姓名"
	            android:textColorHint="#999999"
	            android:textSize="45px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
	        android:id="@+id/layout_account"
	        android:layout_width="fill_parent"
	        android:layout_height="150px"
	        android:orientation="vertical"
	        android:gravity="center_vertical"
	        android:background="@drawable/line_bottom"
	        android:padding="30px">
	        <TextView
	            android:id="@+id/tv_account"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:text="子  账  号"
	            android:textColor="#333333"
	            android:textSize="45px"/>
	        <EditText
	            android:id="@+id/ed_account"
	            android:layout_width="match_parent"
	            android:layout_height="44dp"
	            android:layout_toEndOf="@+id/tv_account"
	            android:background="@android:color/white"
	            android:layout_marginStart="60px"
	            android:layout_centerVertical="true"
	            android:hint="必填/请输入手机号码或工号"
	            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
	            android:textColorHint="#999999"
	            android:textSize="45px"/>
	    </com.zhy.autolayout.AutoRelativeLayout>
	    <com.zhy.autolayout.AutoRelativeLayout
	        android:id="@+id/layout_pwd"
	        android:layout_width="fill_parent"
	        android:layout_height="150px"
	        android:orientation="vertical"
	        android:background="@drawable/line_bottom"
	        android:gravity="center_vertical"
	        android:padding="30px">
	        <TextView
	            android:id="@+id/tv_pwd"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:text="登录密码"
	            android:textColor="#333333"
	            android:textSize="45px"/>
	        <EditText
	            android:id="@+id/ed_pwd"
	            android:layout_width="match_parent"
	            android:layout_height="44dp"
	            android:layout_toEndOf="@+id/tv_pwd"
	            android:background="@android:color/white"
	            android:layout_marginStart="60px"
	            android:layout_centerVertical="true"
	            android:hint="必填/建议设置简单密码"
	            android:maxLength="18"
	            android:textColorHint="#999999"
	            android:textSize="45px"/>
	    </com.zhy.autolayout.AutoRelativeLayout>
	    <com.zhy.autolayout.AutoLinearLayout
	        android:id="@+id/layout_oper"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30dp"
	        android:orientation="vertical">
	        <Button
	            android:id="@+id/btn_sure"
	            android:layout_width="fill_parent"
	            android:text="确认"
	            android:onClick="toLogin"
	            android:textColor="@android:color/white"
	            android:layout_height="141px"
	            android:layout_marginStart="40px"
	            android:layout_marginEnd="40px"
	            android:background="@drawable/btn_normal"/>
	    </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
