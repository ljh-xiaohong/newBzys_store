        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_bullhorn"
            android:layout_width="fill_parent"
            android:layout_height="150px"
            android:layout_marginTop="30px"
            android:background="@drawable/line_bottom">
            <ImageView
                android:id="@+id/img_bullhorn_icon"
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@mipmap/home_bullhorn"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推广管理"
                android:textSize="45px"
                android:layout_toEndOf="@+id/img_bullhorn_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="30px"
                android:textColor="@android:color/black"/>
            <ImageView
                android:layout_width="58px"
                android:layout_height="58px"
                android:src="@mipmap/home_chevron"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30px"/>
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_account"
            android:layout_width="fill_parent"
            android:layout_height="150px"
            android:background="@drawable/line_bottom" >
            <ImageView
                android:id="@+id/img_account_icon"
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@mipmap/home_account"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="子账号"
                android:textSize="45px"
                android:layout_toEndOf="@+id/img_account_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="30px"
                android:textColor="@android:color/black"/>

            <ImageView
                android:layout_width="58px"
                android:layout_height="58px"
                android:src="@mipmap/home_chevron"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/imageView2" />
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_client_profile"
            android:layout_width="fill_parent"
            android:layout_height="150px"
            android:layout_marginTop="30px"
            android:background="@drawable/line_bottom">
            <ImageView
                android:id="@+id/img_client_profile_icon"
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@mipmap/client_profile"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本资料"
                android:textSize="45px"
                android:layout_toEndOf="@+id/img_client_profile_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="30px"
                android:textColor="@android:color/black"/>
            <ImageView
                android:layout_width="58px"
                android:layout_height="58px"
                android:src="@mipmap/home_chevron"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/layout_book_information"
            android:layout_width="fill_parent"
            android:layout_height="150px"
            android:background="@drawable/line_bottom" >
            <ImageView
                android:id="@+id/img_book_information_icon"
                android:layout_width="90px"
                android:layout_height="90px"
                android:src="@mipmap/book_information_button"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帮助与反馈"
                android:textSize="45px"
                android:layout_toEndOf="@+id/img_book_information_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="30px"
                android:textColor="@android:color/black"/>
            <ImageView
                android:layout_width="58px"
                android:layout_height="58px"
                android:src="@mipmap/home_chevron"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
