<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:sp="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="#ff9c00">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="#ff9c00">
        <ImageButton
            android:layout_width="69px"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:onClick="back"
            android:paddingLeft="10dp"
            android:src="@mipmap/btn_back"
            android:background="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品管理"
            android:textColor="@android:color/white"
            android:textSize="51px"
            android:layout_centerInParent="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_above="@+id/layout_menu"
        android:layout_below="@+id/layout_title_bar">
        <ScrollView
            android:id="@+id/tools_scrlllview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f0f0f0"
            android:layout_weight="3"
            android:fadingEdge="none"
            android:scrollbars="none" >
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
            </com.zhy.autolayout.AutoLinearLayout>
        </ScrollView>
        <com.bapm.bzys.newBzys.widget.ZrcListView
	        android:id="@+id/zListView"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_weight="1" 
	        android:background="#f9f9f9"
	        android:scrollbars="none"
	        android:dividerHeight="1dp"
	        android:divider="#e1e1e1"
	        sp:right_width="60dp">
	    </com.bapm.bzys.newBzys.widget.ZrcListView>
    </com.zhy.autolayout.AutoLinearLayout>
    <include
        android:id="@+id/layout_menu"
        layout="@layout/activity_main_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/btn_add"
        android:layout_width="144px"
        android:layout_height="144px"
        android:text="新增商品"
        android:textSize="33px"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_add_account_child_bg"
        android:layout_alignParentEnd="true"
        style="?android:attr/borderlessButtonStyle"
        android:layout_above="@+id/layout_menu"
        android:layout_marginEnd="30px"
        android:layout_marginBottom="90px"/>
</com.zhy.autolayout.AutoRelativeLayout>