<com.zhy.autolayout.AutoRelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"  
	android:clipToPadding="true"
    android:background="#ff9c00">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:layout_alignParentTop="true"
        android:background="#ff9c00">
        <ImageButton
			android:layout_width="69px"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:onClick="back"
			android:paddingLeft="30px"
            android:src="@mipmap/btn_back"
            android:background="@null"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textColor="@android:color/white"
			android:textSize="51px"
            android:layout_centerInParent="true"
			android:id="@+id/textView" />

		<Button
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="返回登录"
            android:textColor="@android:color/white"
            android:textSize="42px"
            android:background="@null"
            android:onClick="back"
            android:paddingRight="30px"
			android:layout_alignBaseline="@+id/textView"
			android:layout_alignBottom="@+id/textView"
			android:layout_alignParentEnd="true"
			android:id="@+id/button" />
	</com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_form"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_below="@+id/layout_title_bar"
        android:background="#f9f9f9">
        <com.zhy.autolayout.AutoRelativeLayout
	        android:id="@+id/layout_new_pwd"
	        android:layout_width="fill_parent"
	        android:layout_height="150px"
	        android:orientation="vertical"
	        android:gravity="center_vertical"
			android:padding="30px"
	        android:background="@drawable/line_bottom"
	        android:layout_marginTop="81px">
	        <TextView
	            android:id="@+id/tv_new_pwd"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:text="输入新密码"
	            android:textColor="#333333"
	            android:textSize="45px"/>
	        <EditText
	            android:id="@+id/ed_new_pwd"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_toEndOf="@+id/tv_new_pwd"
	            android:background="@android:color/white"
	            android:layout_marginStart="60px"
	            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
	            android:layout_centerVertical="true"
	            android:hint="密码6-18位,建议数字与字母组合"
	            android:textColorHint="#999999"
	            android:textSize="45px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
	        android:id="@+id/layout_again_pwd"
	        android:layout_width="fill_parent"
	        android:layout_height="150px"
	        android:orientation="vertical"
	        android:gravity="center_vertical"
	        android:padding="10dp"
	        android:background="@color/white">
	        <TextView
	            android:id="@+id/tv_again_pwd"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:text="确认新密码"
	            android:textColor="#333333"
	            android:textSize="45px"/>
	        <EditText
	            android:id="@+id/ed_again_pwd"
	            android:layout_width="match_parent"
	            android:layout_height="44dp"
	            android:layout_toEndOf="@+id/tv_again_pwd"
	            android:background="@android:color/white"
	            android:layout_marginStart="60px"
	            android:layout_centerVertical="true"
	            android:hint="请再次输入新密码"
	            android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
	            android:textColorHint="#999999"
	            android:textSize="45px"/>
	    </com.zhy.autolayout.AutoRelativeLayout>
	    <com.zhy.autolayout.AutoLinearLayout
	        android:id="@+id/layout_oper"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="40px">
	        <Button 
	            android:id="@+id/btn_login"
	            android:layout_width="fill_parent"
	            android:text="确认"
	            android:onClick="resetPwd"
	            android:textColor="@android:color/white"
	            android:layout_height="141px"
	            android:layout_marginStart="40px"
	            android:layout_marginEnd="40px"
	            android:background="@drawable/btn_normal"/> 
	    </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
