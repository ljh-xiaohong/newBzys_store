<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150px"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:focusable="true"
    android:background="@drawable/line_bottom">
    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/item_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30px">
        <Button
	        android:id="@+id/btn_index"
	        android:layout_width="105px"
	        android:layout_height="99px"
	        android:layout_centerVertical="true"
	        android:layout_alignParentStart="true"
	        android:background="@mipmap/type_red_icon"
	        android:textColor="@android:color/white"
	        android:src="@mipmap/account_book"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36px"
            android:text="姓名"
            android:textSize="45px"
            android:textColor="#333333"
            android:layout_toEndOf="@+id/btn_index"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:padding="0dp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true">
            <TextView
	            android:id="@+id/number"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toLeftOf="@+id/arrow"
	            android:layout_marginRight="30px"
	            android:textColor="#333333"
	            android:layout_centerVertical="true" />
            <ImageView
                android:id="@+id/arrow"
                android:layout_width="33px"
                android:layout_height="58px"
                android:src="@mipmap/home_chevron"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/item_right"
        android:layout_width="666px"
        android:layout_height="match_parent"
        android:background="#fbc40f"
        android:layout_gravity="center_vertical|right"
        android:orientation="horizontal">
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:paddingStart="42px"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:onClick="edit">
            <ImageView 
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@mipmap/type_edit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:gravity="center"
                android:textSize="42px"
                android:text="编辑"
                android:textColor="#6b3416" />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_up"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:paddingStart="35px"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:onClick="sortUp">
            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@mipmap/type_arrow_up"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:gravity="center"
                android:textSize="42px"
                android:text="上移"
                android:textColor="#6b3416" />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:paddingStart="35px"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:onClick="delete">
            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@mipmap/type_delete"/>
            <TextView
	            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:gravity="center"
                android:textSize="42px"
	            android:text="删除"
	            android:textColor="#e95429" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>